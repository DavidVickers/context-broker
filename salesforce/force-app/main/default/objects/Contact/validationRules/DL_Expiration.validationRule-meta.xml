<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DL_Expiration</fullName>
    <active>true</active>
    <description>Contact.DL_Expiration policy description.</description>
    <errorConditionFormula>AND(NOT(ISBLANK(DL_ExpirationDate__c)), DL_ExpirationDate__c &lt; TODAY())</errorConditionFormula>
    <errorDisplayField>DL_ExpirationDate__c</errorDisplayField>
    <errorMessage>Driver&apos;s License expiration must be in the future.</errorMessage>
</ValidationRule>
